
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Scrolling Nav - Start Bootstrap Template</title>
</head>

<body id="page-top">

<!-- Intro Section -->
<section id="intro" class="intro-section" style="background-color:#E6E6E6">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div style="padding-top:15px; padding-bottom:15px; background-color:#01A9DB;">
            <span id="animationSandbox" style="color:white;">
              <i id="bounce1" class="fa fa-television fa-5x" aria-hidden="true" style="font-size:150px; margin-bottom:10px;"></i>
            </span>
        </div>
        <div style="padding-top:10px; padding-bottom:20px; background-color:white;">
          <h3 style="margin-bottom:20px;">계정 만들기</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field" style="margin-bottom:10px;">
                <%= f.label :"이메일 주소" %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>

              <div class="field" style="margin-bottom:10px;">
                <%= f.label :"비밀번호" %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>개 이상)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <div class="field" style="margin-bottom:10px;">
                <%= f.label :"비밀번호 확인" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
              -------------기본정보입력-------------
              <div class="field" style="margin-bottom:10px;">
                <%= f.label :"이름" %><br />
                <%= f.text_field :name%>
              </div>

              <div class="field" style="margin-bottom:10px;">
                <%= f.label :"핸드폰번호" %><br />
                <%= f.text_field :phone_number%>
              </div>
              <div style="font-size:13px;">
                <div class="actions" style="margin-top:25px; margin-bottom:3px;">
                  <%= f.submit "계정만들기", class: "sign-up-btn" %>
                </div>
              </div>
          <% end %>
          <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
  </div>
</section>


<script>
    $('#bounce1').addClass('animated fadeInUp');
</script>





</body>


</html>




